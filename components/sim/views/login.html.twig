{# components/security/views/login.html.twig #}

{% extends 'views/base.html.twig' %}

{% block body %}
<div id="wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                 <h2 class="page-header">Simulador</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4" style="margin-top:100px;">
                <!--php include ROOTDIR.'templates/slidertextlogin.html'; -->
            </div>
            <div class="col-sm-4">
                <div class="login-panel panel panel-default"> {# user/pwd #}
                    <div class="panel-heading">
                        <h3 class="panel-title">Ingresar</h3>
                    </div>
                    <div class="panel-body">
                        <form class="" role="form" id="login" action="{{ form.action }}" method="{{ form.method }}">
                            <input type="hidden" name="token" value="{{ form.token }}">
                            <fieldset>
                                <div id="hide">
                                    <div class="form-group">
                                        <input class=form-control placeholder="E-mail" type="text" name="user" id="user">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="clave" type="password" name="pwd" id="pwd">
                                    </div>
                                    <div class="checkbox" align="left">
                                        <label for="remember">
                                            <input type="checkbox" name="remember" id="remember" value="1">Recordarme
                                        </label>
                                    </div>
                                </div>
                                {% include 'views/widgets/flash.html.twig' %}

                                <button type="submit" class="btn btn-lg btn-info btn-block">Enviar</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-body"  align="center">
                        <div class="col-xs-6">
                            <a href="/index.php/recovery">Recuperar Clave</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="/index.php">Regresar</a>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">{# register #}
                    <div class="panel-body">
                        <a type="button" href="{{ menu.href.sim.register }}" class="btn btn-default btn-block btn-lg">Reg√≠strate Sin Costo</a>
                    </div>
                </div>
                {# selectsim.html.twig #}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% for script in js %}
        <script src="{{ script }}" charset="utf-8"></script>
    {% endfor %}

{% endblock %}
