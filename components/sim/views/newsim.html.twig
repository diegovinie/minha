{# components/sim/views/newsim.html.twig #}

{% extends 'views/base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
<div id="wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                 <h2 class="page-header">Simulador</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                 <div class="panel panel-default">
                     <div class="panel-heading">
                         <h3 class="panel-title">Ingrese datos para nueva simulaci√≥n</h3>
                     </div>
                     <div class="panel-body">
                         <form class="" role="form" action="{{ form.action }}" method="{{ form.method }}" id="form1" name="form1">
                             <input type="hidden" name="token" value="{{ form.token }}">
                             <div class="form-group">
                                 <label for="email"></label>
                                 <input class="form-control" type="text" name="email" value="{{ email }}" readonly>
                             </div>
                             <div class="form-group">
                                 <label for="">Nombre:</label>
                                 <input class="form-control" type="text" name="name" id="name" placeholder="Nombre" required onblur="check_names(this);">
                             <div class="form-group">
                                 <label for="">Apellido:</label>
                                 <input class="form-control" type="text" name="surname" id="surname" placeholder="Apellido" required onblur="check_names(this);">
                             </div>
                             <div>

                             </div>
                             <div class="form-group col-md-7">
                                 <label for="">Edificio:</label>
                                 <!--<input class="form-control" type="text" name="ci" value="" placeholder="V12345678" required onblur="check_ci(this);">-->
                                 <select class="form-control" id="edf" name="edf">
                                     <option value="">Seleccione</option>
                                     {# async #}
                                 </select>
                             </div>
                             <div class="form-group col-md-5">
                                 <label for="">Apartamento:</label>
                                 <select class="form-control" name="apt" id="apt">
                                     {# async #}
                                 </select>
                             </div>
                             <label></label>
                             {% include 'views/widgets/flash.html.twig' %}
                             <div class="" align="center">
                                 <button type="submit" name="bsubmit" id="submit" class="btn btn-success">Enviar</button>
                                 <button type="reset" name="breset" class="btn btn-info">Limpiar</button>
                                 <a type="button" href="/index.php/sim" class="btn btn-danger">Regresar</a>
                             </div>
                         </form>
                     </div>
                 </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% for script in js %}
        <script src="{{ script }}" charset="utf-8"></script>
    {% endfor %}
{% endblock %}
