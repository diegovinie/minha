<link rel="stylesheet" href="{{ css.dpicker }}">
<div class="modal" id="payment" role="dialog">
    <div class="modal-dialog panel panel-default">
        <div class="modal-header panel-heading">
            <h3>{{ title }}  <small> Ingrese los datos de su operación</small> </h3>

        </div>
        <div role="form" class="modal-body panel-body">
            <form action="{{ form.action }}" method="{{ form.method }}">
                <input type="hidden" name="token" value="{{ form.token }}">
                <div class="row">
                    <div class="form-group col-md-4">
                        <label for="">Edificio:</label><input  class="form-control" type="text" name="edif" id="edif" value="{{ edf }}" readonly>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">Apartamento:</label><input  class="form-control" type="text" name="apt" id="apt" value="{{ apt }}" readonly>
                    </div>
                    <div class="form-group col-md-5" >
                        <label for="">Fecha de operación:</label>
                        <input class="form-control" placeholder="aaaa-mm-dd" format="YYYY-MM-DD" type="date" name="date" id="date" required>
                    </div>
                </div>
                <div class="form-group">
                    <label>Tipo de Operación:</label>
                    <select class="form-control" name="type" id="type">
                        <option value="1">Depósito</option>
                        <option value="2" selected>Transferencia</option>
                    </select>
                </div>

                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="">Número Operación:</label>
                        <input class="form-control" type="text" name="n_op" id="n_op" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Banco:</label>
                        <select class="form-control" name="bank" id="bank">
                            {% for bank in banks %}
                                <option value="{{ bank.id }}">{{ bank.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label>Monto:</label><input class="form-control" placeholder="Formato : #.###.###,##" type="text" name="amount" id="amount" onblur="checkNumEsp(this)" onkeyup="alertNumberEs(this)" required>
                    <div class="">

                    </div>
                </div>
                <div class="form-group">
                    <label>Obsercaciones:</label>
                    <textarea class="form-control" name="obs" id="obs" rows="3" cols="20"></textarea>
                </div>
                {% include 'views/widgets/flash.html.twig' %}
                <div class="button_box" align="center">
                    <button type="submit" id='btnSubmit' name="btnSubmit" class="btn btn-primary btn-lg" >Enviar</button>
                    <button type="reset" name="btnReset" class="btn btn-info btn-lg">Limpiar</button>
                    <button type="button" name="btnBack" class="btn btn-default btn-lg" onclick="window.location.reload()">Regresar</button>
                </div>
            </form>
        </div>
    </div>
</div>
