{# components/finances/views/addaccount.html.twig #}
<div class="modal" id="account" role="dialog">
    <div class="modal-dialog panel panel-default">
        <div class="modal-header panel-heading">
            <h3 class="panel-title">Nueva Cuenta:</h3>
        </div>
        <div class="modal-body panel-body" role="form">
            <form action="{{ form.action }}" method="{{ form.method }}">
                <input type="hidden" name="token" value="{{ form.token }}">
                <div class="form-group col-md-12">
                    <label for="">Nombre de la cuenta:</label>
                    <input type="text" name="name" class="form-control">
                </div>
                <div class="form-group col-md-4">
                    <label for="user">Custodio</label>
                    <select class="form-control" name="user">
                        <option value="">Seleccione</option>
                        {% for hab in habs %}
                            <option value="{{ hab.id }}">{{ hab.apt }} - {{ hab.name }} {{ hab.surname }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="type">Tipo:</label>
                    <select class="form-control" name="type">
                        <option value="">Seleccione</option>
                        {% for type in types %}
                            <option value="{{ type.id }}">{{ type.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="amount">Monto m√°ximo:</label>
                    <input type="text" name="amount" class="form-control">
                </div>
                <div class="col-md-12">
                    {% include 'views/widgets/flash.html.twig' %}
                </div>
                <div class="form-group col-md-12" align="center">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    <button type="button" class="btn btn-default" onclick="modalRemove(this)">Regresar</button>
                </div>
            </form>
            <script src="/js/modal.js" charset="utf-8"></script>
        </div>
    </div>
</div>
