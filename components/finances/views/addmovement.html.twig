{# components/finances/views/addmovement.html.twigg #}
<div class="modal" id="movement" role="dialog">
    <div class="modal-dialog panel panel-default">
        <div class="modal-header panel-heading">
            <h3 class="panel-title">Nuevo Movimiento:</h3>
        </div>
        <div class="modal-body panel-body" role="form">
            <form action="{{ form.action }}" method="{{ form.method }}">
                <input type="hidden" name="token" value="{{ form.token }}">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label for="origin">Desde:</label>
                        <select class="form-control" name="origin">
                            <option value="">Seleccione</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="destiny">Destino</label>
                        <select class="form-control" name="destiny">
                            <option value="">Seleccione</option>
                        </select>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="amount">Cantidad:</label>
                        <input type="text" class="form-control" name="amount" value="">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Observaciones:</label>
                        <textarea name="obs" class="form-control" rows="3" cols="40"></textarea>
                    </div>
                    <div class="col-md-12">
                        {% include 'views/widgets/flash.html.twig' %}
                    </div>
                    <div class="col-md-12" align="center">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                        <button type="reset" class="btn btn-info">Limpiar</button>
                        <button type="button" class="btn btn-default">Regresar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
